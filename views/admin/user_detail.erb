<div class="row">
  <div class="span12">
		<h1>ユーザ詳細</h1>
		<hr />
		<h4>ユーザ情報</h4>
		<table class="table table-bordered table-striped">
			<tbody>
				<tr>
					<th>名前</th>
					<td><%= @user["user_name"] %></td>
				</tr>
				<tr>
					<th>FacebookID</th>
					<td><a target="_blank" href="http://www.facebook.com/<%= @user["facebook_id"]%>".to_s><%= @user["facebook_id"] %></a></td>
				</tr>
				<tr>
					<th>登録日</th>
					<td><%= Time.at(@user["create_date"]).to_s(:db) %></td>
				</tr>
				<tr>
					<th>最終ログイン日</th>
					<td><%= @last_login %></td>
				</tr>
				<tr>
					<th>ログイン回数</th>
					<td><%= @login_count %></td>
				</tr>
				<tr>
					<th>最終写真作成日</th>
					<td><%= @last_photo %></td>
				</tr>
				<tr>
					<th>写真作成回数</th>
					<td><%= @photo_count %></td>
				</tr>
			<tbody>
		</table>
		<h4>作った写真</h4>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>イメージ</th>
					<th>メッセージ</th>
					<th>公開範囲</th>
					<th>タグ</th>
					<th>投稿日</th>
				</tr>
			</thead>
			<tbody>
				<% @photo.each do |photo| %>
				<tr>
					<td><a href="/admin/photo/detail/<%= photo["_id"] %>"><img src="data:image/jpeg;base64,<%= Base64.encode64(photo["blob"].to_s) %>" class="img-polaroid" style="max-width: 200px;"/></a></td>
					<td><%= photo["message"].gsub(/\n/, "<br />") %></td>
					<td><%= photo["privacy"] %></td>
					<td><%= photo["use_tag"] %></td>
					<td><%= Time.at(photo["create_date"]).to_s(:db) %></td>
				</tr>
				<% end %>
			<tbody>
		</table>
	</div>
</div>

